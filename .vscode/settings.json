{
    "files.associations": {
        "*.ipp": "cpp",
        "*.tcc": "cpp",
        "*.c": "c",
        "*.h": "c"
    },
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "None",
    "[c]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[h]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    }
}